---
import '../styles/style.css'
import Layout from '../layouts/Layout.astro'
const title = 'Uses - CJ Dunteman'
---

  <style>
    section {
      margin-bottom: var(--step-5);
    }
    p {
      margin-bottom: var(--step-1);
    }
    </style>

<Layout title={title}>
  <main id="main-content" style="max-width: 720px; margin: 0 auto">
    <section>
      <h2>Productivity</h2>
          <p>
            <a href="https://www.raycast.com/">Raycast</a
            ><i>
              for maximum productivity, read
              <a href="/how-i-use-raycast.html">how I use it</a></i
            >
          </p>
          <p>
            <a href="https://ticktick.com/home">TickTick</a><i> for tasks</i>
          </p>
          <p>
            <a href="https://1password.com/">1Password</a
            ><i> for managing passwords (and more)</i>
          </p>
          <p>
            <a href="https://cleanshot.com/">CleanShot X</a
            ><i> for better, easier screenshots</i>
          </p>
          <p><a href="https://arc.net/">Arc</a><i> for browsing the world wide web</i></p>
          <p>
            <a href="https://www.yubico.com/">Yubikey</a
            ><i> for security, of course</i>
          </p>
        </section>
        <section>
          <h2>Web Development</h2>
          <p>
            <a href="https://www.cursor.com/">Cursor</a
            ><i> for development</i>
          </p>
          <p>
            <a href="https://www.figma.com/">Figma</a
            ><i> for some web design</i>
          </p>
          <p>
            <a href="https://supabase.com/">Supabase</a
            ><i> for Postgres, thank you open source</i>
          </p>
          <p>
            <a href="https://www.cloudflare.com/">Cloudflare</a
            ><i> for domains, dns, and static hosting</i>
          </p>
          <p>
            <a href="https://vercel.com" target="_blank">Vercel</a
            ><i> for hosting Next.js projects</i>
          </p>
        </section>
  </main>
</Layout>
